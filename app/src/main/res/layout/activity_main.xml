<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skytech.codepath.e_todo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eTodo - Make your To-do list here!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintVertical_bias="0.032"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/title" />

    <EditText
        android:id="@+id/todoTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/title"
        android:layout_toLeftOf="@+id/addTaskBTN"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter you to-do task"/>

    <Button
        android:id="@+id/addTaskBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:onClick="addItem"
        android:layout_alignTop="@+id/todoTask"
        android:layout_toRightOf="@+id/title"
        android:layout_toEndOf="@+id/title" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addTaskBTN"
        android:layout_marginTop="24dp"
        android:id="@+id/todoItems"/>

</RelativeLayout>
